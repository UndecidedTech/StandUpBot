generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Tasks {
  id               String          @id @default(auto()) @map("_id") @db.ObjectId
  completed        Boolean
  label            String
  StandupMembers   StandupMembers? @relation(fields: [standupMembersId], references: [id])
  standupMembersId String?         @db.ObjectId
}

model StandupMembers {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  User       Users     @relation(fields: [usersId], references: [id])
  tasks      Tasks[]
  StandUps   StandUps? @relation(fields: [standUpsId], references: [id])
  standUpsId String?   @db.ObjectId
  usersId    String    @db.ObjectId
}

model StandUps {
  id             String           @id @default(auto()) @map("_id") @db.ObjectId
  date           String
  standupMembers StandupMembers[]
}

model Users {
  id             String           @id @default(auto()) @map("_id") @db.ObjectId
  username       String
  discordId      String
  avatar         String
  refreshToken   String
  accessToken    String
  StandupMembers StandupMembers[]
}
